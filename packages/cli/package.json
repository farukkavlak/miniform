{
  "name": "@miniform/cli",
  "version": "1.0.0",
  "main": "dist/index.js",
  "bin": {
    "miniform": "bin/miniform.js"
  },
  "scripts": {
    "build": "esbuild --sourcemap --bundle --platform=node --target=node18 --outfile=dist/index.js ./src/index.ts && tsc --emitDeclarationOnly --declaration --outDir dist src/index.ts --target ES2020 --moduleResolution node --esModuleInterop",
    "lint": "eslint .",
    "test": "vitest run --coverage",
    "type:check": "tsc --noEmit"
  },
  "dependencies": {
    "@miniform/orchestrator": "*",
    "@miniform/provider-local": "*",
    "@miniform/state": "*",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "inquirer": "^8.2.4"
  },
  "devDependencies": {
    "@types/inquirer": "^8.2.1",
    "@types/node": "^22.10.0",
    "esbuild": "^0.24.0",
    "typescript": "^5.7.0",
    "vitest": "^4.0.16"
  }
}
